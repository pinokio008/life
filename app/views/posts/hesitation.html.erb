<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">メモ</h1>
    <%= form_with(model: @post, local: true) do |form| %>
      <div class="form">
        <div class="form-body">
          <%= form.label :content, "不安や心配な事" %>
          <%= form.text_field :content %>
          <%= form.hidden_field :user_id, :value => user_signed_in? ? current_user.id : nil %>
          <%= form.hidden_field :pageid, :value => "hesitation" %>
          <%= form.submit "送信" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
